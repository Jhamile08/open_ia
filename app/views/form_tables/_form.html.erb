
<%= form_with(model: form_table, class: "contents") do |form| %>
  <% if form_table.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(form_table.errors.count, "error") %> prohibited this form_table from being saved:</h2>

      <ul>
        <% form_table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="my-5">
    <%= form.label :"title for your search" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :"Give a good prompt" %>
    <%= form.textarea :description, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.check_box  :processed_in_job, id: 'show-modal-checkbox' %>
    <%= form.label :show_modal, "Enqueue this form" %>
  </div>

<%= form.fields_for :user, @user do |userInput| %>
  <div id="hidden-modal" style="display: none;">

    <p>Para recibir tu respuesta luego llena los siguientes datos:</p>
    <%= userInput.label :name, "Additional Field 1" %>
    <%= userInput.text_field :name %>
    
    <%= userInput.label :email, "Additional Field 2" %>
    <%= userInput.text_field :email %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
<% end %>

