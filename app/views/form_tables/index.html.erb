<div class="w-full px-4 py-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Form tables" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Form tables</h1>
    <%= link_to "New form table", new_form_table_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="form_tables" class="min-w-full ">
    <% @form_tables.each do |form_table| %>
      <div class="mb-5 p-4 border border-gray-200 rounded-lg shadow-sm px-4 py-6">
        <!-- Nombre en negrita -->
        <h2 class="font-bold text-xl mb-2"><%= form_table.name %></h2>
        
        <!-- DescripciÃ³n breve -->
        <p class="text-gray-700 mb-3"><%= truncate(form_table.description, length: 100) %></p>

        <!-- Enlace para mostrar la tabla -->
        <p>
          <%= link_to "Show this form table", form_table, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
